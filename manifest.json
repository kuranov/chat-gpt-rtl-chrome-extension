{
  "manifest_version": 3,
  "name": "RTL mode for OpenAI Chat",
  "version": "1.0",
  "description": "Changes chat text direction from LTR to RTL",
  "permissions": ["scripting", "storage", "tabs"],
  "action": {
    "default_icon": {
      "16": "/icons/icon_16_disabled.png",
      "48": "/icons/icon_48_disabled.png",
      "128": "/icons/icon_128_disabled.png"
    }
  },
  "icons": {
    "16": "/icons/icon_16_disabled.png",
    "48": "/icons/icon_48_disabled.png",
    "128": "/icons/icon_128_disabled.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["js/contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/icons/icon_16_disabled.png",
        "/icons/icon_48_disabled.png",
        "/icons/icon_128_disabled.png",
        "/icons/icon_16_enabled.png",
        "/icons/icon_48_enabled.png",
        "/icons/icon_128_enabled.png",
        "/icons/icon_16_inactive.png",
        "/icons/icon_48_inactive.png",
        "/icons/icon_128_inactive.png"
      ],
      "matches": ["https://*/*"]
    }
  ]
}